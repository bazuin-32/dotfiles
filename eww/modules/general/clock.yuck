(defpoll time :interval "1s"
              :initial "initial"
              :run-while true
  `date '+%I:%M %p'`)

(defpoll date :interval "1m"
              :run-while true
  `date '+%A, %B %d %Y'`)


(defwidget clock []
  (box :class "time"
       :orientation "h"
       :space-evenly true
       :halign "end"
       :spacing 0
       :tooltip date
    (label :text time)))
