(defwidget media_stats []
  (box
    :class "menu_item"
    :orientation "v"

    (box
      :space-evenly false

      (label :text "Vol")
      (progress
        :valign "center"
        :value { replace(volume_percent, "%$", "") })
      (label :text { volume_percent }))
    (box
      :space-evenly false

      (label :text "Mic")
      (progress
        :valign "center"
        :value { EWW_RAM["used_mem_perc"] })
      (label :text "${ round(EWW_RAM['used_mem_perc'], 1) }%"))))
